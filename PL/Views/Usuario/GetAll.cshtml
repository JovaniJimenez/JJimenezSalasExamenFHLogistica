﻿@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 style="text-align: center;">Usuarios</h2>
<div class="container">


    <div class="row">
        <div class="col-md-12">
            <h5>Seleccione un Usuario para editarlo o para Asignar un Equipo.</h5>
            <hr />
        </div>
    </div>

</div>

<div style="float:right;">
    @Html.ActionLink("Agregar", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
</div>

<br>
<br>

<table class="table table-hover table-bordered table-responsive">
    <thead>
        <tr class="table-secondary">
            <td>Editar</td>
            <td style="display :none;">IdUsuario</td>
            <td style="display :none;">IdSupervisor</td>

            <td>Nombre</td>
            <td>ApellidoPaterno</td>
            <td>ApellidoMaterno</td>

        </tr>
    </thead>
    <tbody>
        @foreach (ML.Usuario usuario in Model.Usuarios)
        {
            <tr>
                <td class="text-center">
                    <a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario })">Modificar</a>
                    <a class="btn btn-success glyphicon-align-center " href="@Url.Action("GetEquipoSinAsignar", "Usuario", new { IdUsuario = usuario.IdUsuario  })">Asignar materia </a>

                </td>
                <td style="display :none;">@usuario.IdUsuario </td>
                <td style="display :none;">@usuario.Supervisor.IdSupervisor </td>

                <td>@usuario.Nombre</td>
                <td>@usuario.ApellidoPaterno</td>
                <td>@usuario.ApellidoMaterno</td>



            </tr>
        }

    </tbody>
</table>

<style>

    body {
        background: #c0c0aa; /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #1cefff, #c0c0aa); /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #1cefff, #c0c0aa); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    }
</style>

