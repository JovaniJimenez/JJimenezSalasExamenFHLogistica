﻿@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 style="text-align: center; color:aqua">Usuarios</h2>
<div class="container">
    

    <div class="row">
        <div class="col-md-12">
            <h5>Seleccione un Usuario para editarlo o + para agregar...</h5>
            <hr/>
        </div>
    </div>

</div>

<div style="float:right;">
    @Html.ActionLink("Agregar", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
</div>

<br>
<br>

<table class="table table-hover table-bordered table-responsive">
    <thead>
        <tr class="table-secondary">
            <td>Editar</td>
            <td style="display :none;">IdUsuario</td>
            <td style="display :none;">IdSupervisor</td>

            <td>Nombre</td>
            <td>ApellidoPaterno</td>
            <td>ApellidoMaterno</td>

        </tr>
    </thead>
    <tbody>
        @foreach (ML.Usuario usuario in Model.Usuarios)
        {
            <tr>
                <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario })"></a></td>
                <td style="display :none;">@usuario.IdUsuario </td>
                <td style="display :none;">@usuario.Supervisor.IdSupervisor </td>

                <td>@usuario.Nombre</td>
                <td>@usuario.ApellidoPaterno</td>
                <td>@usuario.ApellidoMaterno</td>



            </tr>
        }

    </tbody>
</table>

